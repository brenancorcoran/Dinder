<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/home_btn"
        android:layout_width="136dp"
        android:layout_height="58dp"
        android:background="#40476D"
        android:backgroundTint="#40476D"
        android:text="Home"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="657dp" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="110dp"
        android:background="#40476D"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"></LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/mervale_font"
        android:text="@string/app_name"
        android:textColor="#FFFFFF"
        android:textSize="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/matches_btn"
        android:layout_width="136dp"
        android:layout_height="58dp"
        android:background="#40476D"
        android:backgroundTint="#40476D"
        android:text="Matches"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="240dp"
        tools:layout_editor_absoluteY="657dp" />

    <Button
        android:id="@+id/copy_link_btn"
        android:layout_width="184dp"
        android:layout_height="82dp"
        android:text="Copy Link"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="234dp" />

    <Button
        android:id="@+id/shuffle_ideas_btn"
        android:layout_width="215dp"
        android:layout_height="77dp"
        android:text="Shuffle Ideas"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="457dp" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="SEND THIS LINK"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textAllCaps="true"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="144dp" />

    <EditText
        android:id="@+id/or_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="OR"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textAllCaps="true"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="361dp" />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="bty.kyl5454.tylj"
        android:textAlignment="center"
        android:textColor="#E40707"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="186dp" />

</androidx.constraintlayout.widget.ConstraintLayout>